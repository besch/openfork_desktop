{
  "name": "openfork_client",
  "private": true,
  "version": "0.0.1",
  "description": "Openfork Client",
  "author": "Openfork",
  "type": "module",
  "main": "electron.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "electron .",
    "pack": "electron-builder",
    "release": "electron-builder --publish=always"
  },
  "dependencies": {
    "@effect/core": "^0.0.16",
    "@effect/data": "^0.18.7",
    "@effect/platform": "^0.90.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/supabase-js": "^2.56.1",
    "@tailwindcss/vite": "^4.1.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "electron-store": "^10.1.0",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.539.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "recharts": "^3.1.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/node": "^24.8.1",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/recharts": "^1.8.29",
    "@vitejs/plugin-react": "^4.7.0",
    "electron": "^37.2.6",
    "electron-builder": "^25.0.2",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.0",
    "vite": "^7.1.0"
  },
  "build": {
    "appId": "com.openfork.dgn-client",
    "productName": "Openfork Client",
    "artifactName": "${productName}-${os}-${arch}.${ext}",
    "files": [
      "dist/**/*",
      "electron.cjs",
      "preload.js",
      "src/python-process-manager.cjs",
      "config.json",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
